<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jason.barterworld.SetupActivity">


    <Button
        android:text="Set up my account!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register_setup"
        android:background="@color/colorAccent"
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        android:layout_below="@+id/txt_pwd2_setup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />


    <ImageButton
        android:id="@+id/btn_img_profile_setup"
        android:layout_width="150dp"

        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"

        android:background="#00ffffff"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:minHeight="150dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/profile" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_user_name_setup"
        android:background="@drawable/input_outline"
        android:padding="5dp"
        android:hint="Your Name"
        android:layout_below="@+id/btn_img_profile_setup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:textSize="14sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_email_setup"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:hint="Email Address (Used as Login username)"
        android:textSize="12sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outline"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/txt_email_setup"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_pwd_setup"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textSize="14sp"
        android:hint="Password" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outline"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txt_pwd2_setup"
        android:padding="5dp"
        android:textSize="14sp"
        android:hint="Confirm Password"
        android:layout_below="@+id/txt_pwd_setup"
        android:layout_alignLeft="@+id/txt_pwd_setup"
        android:layout_alignStart="@+id/txt_pwd_setup"
        android:layout_alignRight="@+id/txt_pwd_setup"
        android:layout_alignEnd="@+id/txt_pwd_setup" />

</RelativeLayout>
